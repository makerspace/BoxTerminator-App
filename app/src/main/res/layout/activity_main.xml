<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/terminator_bgr"
        tools:context=".termination.TerminationActivity">

    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Commence termination!"

            android:textSize="32sp"
            android:elevation="3dp"
            android:textColor="@android:color/black"
            android:background="@android:color/holo_orange_dark"
            android:padding="10dp"
            android:id="@+id/terminationBtn"
            app:layout_constraintTop_toTopOf="@+id/guideline" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
            tools:text="Get to da choppa!"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/qrCodeResultText"
            android:textColor="@android:color/white"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/terminationBtn"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="24dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="24dp" android:textAlignment="center"/>
    <android.support.constraint.Guideline
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintGuide_percent="0.45"
            android:id="@+id/guideline" app:layout_constraintGuide_begin="20dp"
            android:orientation="horizontal"/>

</android.support.constraint.ConstraintLayout>