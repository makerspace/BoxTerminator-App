<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/terminationResultImg"
            android:scaleType="fitXY"
            tools:src="@drawable/terminator"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
    />
    <TextView
            tools:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:textSize="38sp"
            android:id="@+id/terminationResultText"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="32dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="32dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="32dp"
            android:textAlignment="center"/>
    <TextView
            tools:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:textSize="28sp"
            android:id="@+id/terminationDate"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="24dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="24dp"
            android:textAlignment="center"
            app:layout_constraintHorizontal_bias="0.548" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/terminationDoneBtn"/>
    <Button
            android:text="Nag"
            android:textSize="32sp"
            android:elevation="3dp"
            android:textColor="@android:color/black"
            android:background="@android:color/holo_orange_dark"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:visibility="gone"
            tools:visibility="visible"
            android:id="@+id/terminationResultBtn"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginBottom="24dp"
            app:layout_constraintBottom_toTopOf="@+id/terminationDate"/>
    <Button
            android:text="Done"
            android:textSize="32sp"
            android:elevation="3dp"
            android:textColor="@android:color/black"
            android:background="@android:color/holo_orange_dark"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:id="@+id/terminationDoneBtn"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

</android.support.constraint.ConstraintLayout>